{
  "dxt_version": "0.1.0",
  "name": "naver-api-extension",
  "display_name": "네이버 API 확장 프로그램",
  "version": "1.0.0",
  "description": "네이버 API를 사용하여 검색, 데이터랩, 캘린더 등 다양한 네이버 서비스 데이터를 가져올 수 있는 확장 프로그램",
  "long_description": "이 확장 프로그램은 네이버 API를 통해 다양한 네이버 서비스의 데이터를 Claude에서 직접 사용할 수 있게 해줍니다. 검색 API, 데이터랩 API, 캘린더 API 등을 지원하며, 네이버 아이디로 로그인 기능도 포함되어 있습니다.",
  "author": {
    "name": "AI Assistant",
    "email": "assistant@example.com"
  },
  "homepage": "https://developers.naver.com/main/",
  "documentation": "https://developers.naver.com/docs/common/openapiguide/",
  "icon": "icon.png",
  "server": {
    "type": "node",
    "entry_point": "server/index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/server/index.js"],
      "env": {
        "NAVER_CLIENT_ID": "${user_config.client_id}",
        "NAVER_CLIENT_SECRET": "${user_config.client_secret}"
      },
      "timeout": 30000
    }
  },
  "tools": [
    {
      "name": "search_blog",
      "description": "네이버 블로그 검색"
    },
    {
      "name": "search_news",
      "description": "네이버 뉴스 검색"
    },
    {
      "name": "search_book",
      "description": "네이버 책 검색"
    },
    {
      "name": "search_encyclopedia",
      "description": "네이버 백과사전 검색"
    },
    {
      "name": "search_movie",
      "description": "네이버 영화 검색"
    },
    {
      "name": "search_webkr",
      "description": "네이버 웹문서 검색"
    },
    {
      "name": "search_image",
      "description": "네이버 이미지 검색"
    },
    {
      "name": "search_shop",
      "description": "네이버 쇼핑 검색"
    },
    {
      "name": "test_api_connection",
      "description": "네이버 API 연결 상태 테스트"
    },
    {
      "name": "get_datalab_guide",
      "description": "데이터랩 API 사용 가이드"
    },
    {
      "name": "datalab_search_trend",
      "description": "데이터랩 검색어 트렌드 조회"
    },
    {
      "name": "datalab_shopping_insight",
      "description": "데이터랩 쇼핑 인사이트 조회"
    },
    {
      "name": "get_user_profile",
      "description": "네이버 아이디로 로그인 사용자 프로필 조회"
    },
    {
      "name": "create_calendar_schedule",
      "description": "네이버 캘린더 일정 생성"
    }
  ],
  "tools_generated": true,
  "keywords": ["naver", "api", "search", "datalab", "calendar", "korean"],
  "license": "MIT",
  "compatibility": {
    "claude_desktop": ">=0.1.0",
    "platforms": ["darwin", "win32", "linux"],
    "runtimes": {
      "node": ">=16.0.0"
    }
  },
  "user_config": {
    "client_id": {
      "type": "string",
      "title": "네이버 클라이언트 ID",
      "description": "네이버 개발자 센터에서 발급받은 클라이언트 ID",
      "sensitive": true,
      "required": true
    },
    "client_secret": {
      "type": "string",
      "title": "네이버 클라이언트 시크릿",
      "description": "네이버 개발자 센터에서 발급받은 클라이언트 시크릿",
      "sensitive": true,
      "required": true
    }
  }
} 